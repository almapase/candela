<div class="col-md-8 g-mb-50">
  <div class="g-brd-around g-brd-white-opacity-0_6 g-px-45 g-py-60">
    <div class="row">
      <div class="col-md-4 g-mb-30">
        <h2 class="h1 g-color-white">Contáctenos</h2>
      </div>
      <div class="col-md-8 g-mb-30">
        <%= form_tag send_path,method: :post do %>
          <div class="mb-3">
            <%= text_field_tag :name, nil, class: 'form-control g-brd-none g-brd-bottom g-brd-white g-brd-primary--focus g-color-white g-bg-transparent g-placeholder-gray-light-v5 rounded-0 g-py-13 g-px-0 mb-2', placeholder: 'Nombre' %>
          </div>

          <div class="mb-3">
            <%= email_field_tag :email, nil, class: 'form-control g-brd-none g-brd-bottom g-brd-white g-brd-primary--focus g-color-white g-bg-transparent g-placeholder-gray-light-v5 rounded-0 g-py-13 g-px-0 mb-2', placeholder: 'Email' %>
          </div>

          <div class="mb-4">
            <%= text_area_tag :content, nil, class: 'form-control g-brd-none g-brd-bottom g-brd-white g-brd-primary--focus g-color-white g-bg-transparent g-placeholder-gray-light-v5 g-resize-none rounded-0 g-py-13 g-px-0 mb-5', placeholder: 'Escribe aquí tú mensaje', rows: 5 %>
          </div>

          <%= submit_tag "Enviar", class: "btn u-btn-primary g-bg-secondary g-color-primary g-color-white--hover g-bg-primary--hover g-font-weight-600 g-font-size-12 g-rounded-30 g-py-15 g-px-35", role: "button", data: { disable_with: "Enviando..." } %>
        <% end %>
      </div>
    </div>
      <% if !flash[:notice].nil? %>
        <div class="row">
          <div class="col-lg-6">
            <!-- Border Alert -->
            <div class="alert fade show g-brd-around g-brd-gray-light-v3 rounded-0" role="alert">
              <button type="button" class="close u-alert-close--light g-ml-10 g-mt-1" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
              </button>

              <div class="media">
                <div class="d-flex g-mr-10">
              <span class="u-icon-v3 u-icon-size--sm g-bg-lightred g-color-white g-rounded-50x">
                <i class="fa fa-envelope"></i>
              </span>
                </div>
                <div class="media-body">
                  <div class="d-flex justify-content-between">
                    <p class="m-0"><strong>Gracias</strong></p>
                  </div>
                  <p class="m-0 g-font-size-14">Ya recibimos tu mensaje, pronto nos contactaremos.</p>
                </div>
              </div>
            </div>
            <!-- End Border Alert -->
          </div>
        </div>
      <% end %>
  </div>
</div>
